<Window x:Class="NetworkProgrammingP12.HttpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkProgrammingP12"
        mc:Ignorable="d"
        Title="HttpWindow" Height="500" Width="400" Background="Turquoise">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">        
            <Button x:Name="get1Button" Content="GET" Margin="5 5 5 5" FontSize="20" Click="get1Button_Click"/>
            <Button x:Name="ratesXMLButton" Content="XML" Margin="5 5 5 5" FontSize="20" Click="ratesXMLButton_Click"/>
            <Button x:Name="ratesJSONButton" Content="Json" Margin="5 5 5 5" FontSize="20" Click="ratesJSONButton_Click"/>
            <Button x:Name="ratesButton" Content="Rates" Margin="5 5 5 5" FontSize="20" Click="ratesButton_Click"/>
            <Button x:Name="popularButton" Content="Popular" Margin="5 5 5 5" FontSize="20" Click="popularButton_Click"/>
        </StackPanel>
        <ScrollViewer Height="380" Margin="5 5 5 5">
            <TextBlock x:Name="textBlock1" Margin="5 5 5 5" FontFamily="Courier New"/>
        </ScrollViewer>
    </StackPanel>
</Window>
